            android:exported="false" />

        <activity
            android:name=".appsdk.news.NewsDetailActivity"
            android:exported="false" />

        <activity
            android:name=".appsdk.news.NewsActivity"
            android:exported="false" />

        <activity
            android:name=".appsdk.news.result.NewsResultActivity"
            android:exported="false" />

        <activity
