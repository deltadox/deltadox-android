        <activity
            android:name=".appsdk.notification.custom.CustomNotifActivity"
            android:exported="false" />

        <activity
            android:name=".appsdk.notification.simple.MainNotifActivity"
            android:exported="false" />

        <activity
            android:name=".appsdk.piracy.KotlinActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".appsdk.piracy.PiracyMainActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".appsdk.main.MainSDKActivity"
